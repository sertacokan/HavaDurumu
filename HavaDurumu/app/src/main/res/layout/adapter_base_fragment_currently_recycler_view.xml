<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/baseFragmentCurrentlyCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/currently_cardiview_radius">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/baseFragmentCurrentlyListDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/texts_color"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceSmall"
            />

        <ImageView
            android:id="@+id/baseFragmentCurrentlyForecastIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/baseFragmentCurrentlyTemperatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/texts_color"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceSmall"
           />
    </LinearLayout>

</android.support.v7.widget.CardView>
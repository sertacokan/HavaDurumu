<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/baseFragmentWeeklyRecyclerCardView"
    android:orientation="horizontal"
    android:layout_margin="@dimen/cardviews_margin"
    >

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

     <TextView
         android:id="@+id/baseFragmentWeeklyListDate"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textAlignment="gravity"
         android:textColor="@color/texts_color"
         android:textStyle="bold"
         android:textAppearance="?android:textAppearanceSmall"
         tools:text="Çarşamba"/>

     <ImageView
         android:id="@+id/baseFragmentWeeklyForecastIcon"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:src="@drawable/add"/>

     <TextView
         android:id="@+id/baseFragmentWeeklyTemperatures"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textAlignment="gravity"
         android:textColor="@color/texts_color"
         android:textStyle="bold"
         android:textAppearance="?android:textAppearanceSmall"
         tools:text="17"/>
 </LinearLayout>

</android.support.v7.widget.CardView>